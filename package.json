{
  "name": "pocketvex",
  "version": "1.0.0",
  "description": "Schema migration system for PocketBase with real-time development workflow",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "dev": "bun run src/dev-server.ts",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "test": "bun test",
    "migrate": "bun run src/cli/migrate.ts",
    "schema:watch": "bun run src/dev-server.ts --watch",
    "schema:apply": "bun run src/cli/apply.ts",
    "schema:diff": "bun run src/cli/diff.ts"
  },
  "dependencies": {
    "pocketbase": "^0.21.1",
    "chokidar": "^3.5.3",
    "commander": "^11.1.0",
    "chalk": "^5.3.0",
    "ora": "^8.0.1",
    "inquirer": "^9.2.12"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^20.10.0",
    "@types/inquirer": "^9.0.7",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "bin": {
    "pocketvex": "./dist/index.js"
  },
  "keywords": [
    "pocketbase",
    "schema",
    "migration",
    "database",
    "development"
  ],
  "author": "Trent Brew",
  "license": "MIT"
}
