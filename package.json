{
  "name": "pocketvex",
  "version": "1.0.2",
  "description": "Schema migration system for PocketBase with real-time development workflow",
  "main": "dist/lib.js",
  "module": "dist/lib.js",
  "types": "dist/lib.d.ts",
  "type": "module",
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "import": "./dist/lib.js",
      "types": "./dist/lib.d.ts"
    },
    "./types": {
      "import": "./dist/types/pocketbase-js.js",
      "types": "./dist/types/pocketbase-js.d.ts"
    },
    "./types/schema-strict": {
      "import": "./dist/types/schema-strict.js",
      "types": "./dist/types/schema-strict.d.ts"
    },
    "./types/migration": {
      "import": "./dist/types/migration.js",
      "types": "./dist/types/migration.d.ts"
    },
    "./config": {
      "import": "./dist/config/index.js",
      "types": "./dist/config/index.d.ts"
    },
    "./cli": {
      "import": "./dist/cli/index.js"
    }
  },
  "scripts": {
    "build": "rm -rf dist && bun build src/lib.ts --outdir dist --target node --format esm && bun build src/index.ts --outdir dist/cli --target node --format esm && bun build src/types/pocketbase-js.ts --outdir dist/types --target node --format esm && bun build src/types/schema-strict.ts --outdir dist/types --target node --format esm && bun build src/types/migration.ts --outdir dist/types --target node --format esm && bun build src/config/index.ts --outdir dist/config --target node --format esm && node scripts/fix-shebang.mjs && bunx tsc --project config/tsconfig.build.json --emitDeclarationOnly",
    "prepublishOnly": "npm run build",
    "typecheck": "bunx tsc --project config/tsconfig.json --noEmit",
    "lint": "eslint src --ext .ts",
    "test": "bun test",
    "cli": "bun run src/cli/index.ts",
    "migrate": "bun run src/cli/index.ts migrate",
    "schema:watch": "bun run src/dev-server.ts --watch",
    "schema:apply": "bun run src/cli/index.ts schema apply",
    "schema:diff": "bun run src/cli/index.ts schema diff",
    "types:generate": "bun run src/cli/index.ts types generate",
    "dev": "bun run src/cli/index.ts dev start",
    "dev:once": "bun run src/cli/index.ts dev start --once",
    "setup": "bun run src/cli/index.ts util setup",
    "credentials": "bun run src/cli/index.ts util credentials",
    "test-connection": "bun run src/cli/index.ts util test-connection",
    "demo": "bun run examples/demo.ts",
    "demo:basic": "bun run examples/basic/demo.ts",
    "demo:live": "bun run examples/live-demo/live-demo.ts",
    "demo:realtime": "bun run examples/live-demo/realtime-migration-demo.ts",
    "demo:incremental": "bun run examples/live-demo/incremental-migration-demo.ts",
    "demo:js-vm": "bun run examples/javascript-vm/js-features-demo.ts",
    "demo:cron": "bun run examples/javascript-vm/cron-demo.ts",
    "demo:basic-cron": "bun run examples/javascript-vm/basic-cron-demo.ts",
    "demo:auto-deploy": "bun run examples/javascript-vm/auto-deployment-demo.ts",
    "check:pack": "npm pack --dry-run",
    "demo:host-selection": "bun run examples/host-selection-demo.ts",
    "demo:project-structure": "cat examples/project-structure/README.md",
    "demo:frontend-svelte": "cat examples/project-structure/frontend-svelte/README.md",
    "demo:tree": "cat examples/project-structure/tree-diagram.md",
    "demo:test": "bun run examples/live-demo/test-connection.ts",
    "dev-js": "bun run src/dev-server-js.ts"
  },
  "sideEffects": false,
  "dependencies": {
    "pocketbase": "^0.21.1",
    "chokidar": "^3.5.3",
    "commander": "^11.1.0",
    "chalk": "^5.3.0",
    "ora": "^8.0.1",
    "inquirer": "^9.2.12"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^20.10.0",
    "@types/inquirer": "^9.0.7",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "bin": {
    "pocketvex": "./dist/cli/index.js"
  },
  "keywords": [
    "pocketbase",
    "schema",
    "migration",
    "database",
    "development",
    "typescript",
    "cli",
    "devtools"
  ],
  "author": "Trent Brew",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/trentbrew/pocketvex.git"
  },
  "bugs": {
    "url": "https://github.com/trentbrew/pocketvex/issues"
  },
  "homepage": "https://github.com/trentbrew/pocketvex#readme",
  "engines": {
    "node": ">=18.0.0"
  }
}
