{
  "name": "pocketvex",
  "version": "1.0.0",
  "description": "Schema migration system for PocketBase with real-time development workflow",
  "main": "dist/lib.js",
  "module": "dist/lib.js",
  "types": "dist/lib.d.ts",
  "type": "module",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "import": "./dist/lib.js",
      "types": "./dist/lib.d.ts"
    },
    "./types": {
      "import": "./dist/types/schema.js",
      "types": "./dist/types/schema.d.ts"
    },
    "./cli": {
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "dev": "bun run src/dev-server.ts",
    "build": "bun build src/lib.ts --outdir dist --target node --format esm && bun build src/index.ts --outdir dist --target node --format esm && bunx tsc --project tsconfig.build.json --emitDeclarationOnly",
    "prepublishOnly": "npm run build",
    "typecheck": "bunx tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "test": "bun test",
    "migrate": "bun run src/cli/migrate.ts",
    "schema:watch": "bun run src/dev-server.ts --watch",
    "schema:apply": "bun run src/cli/apply.ts",
    "schema:diff": "bun run src/cli/diff.ts"
  },
  "dependencies": {
    "pocketbase": "^0.21.1",
    "chokidar": "^3.5.3",
    "commander": "^11.1.0",
    "chalk": "^5.3.0",
    "ora": "^8.0.1",
    "inquirer": "^9.2.12"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^20.10.0",
    "@types/inquirer": "^9.0.7",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "bin": {
    "pocketvex": "./dist/index.js"
  },
  "keywords": [
    "pocketbase",
    "schema",
    "migration",
    "database",
    "development",
    "typescript",
    "cli",
    "devtools"
  ],
  "author": "Trent Brew",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/trentbrew/pocketvex.git"
  },
  "bugs": {
    "url": "https://github.com/trentbrew/pocketvex/issues"
  },
  "homepage": "https://github.com/trentbrew/pocketvex#readme",
  "engines": {
    "node": ">=18.0.0"
  }
}
